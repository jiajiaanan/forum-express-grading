{{> restaurant-tabs route='topRestaurants'}}
<h1>Top 10 人氣餐廳</h1>
<hr />
{{#each restaurants}}
<div class="card mb-4 shadow-sm">

  <div class="card-body row">
    <div class="col-3">
      <a href="/restaurants/{{this.id}}">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
      </a>
    </div>
    <div class="col-9">
      <h2>{{this.name}}</h2>
      <span class="bg-secondary badge">收藏數：{{this.favoritedCount}}</span>
      <p class="card-text text-truncate">{{this.description}}</p>

      {{!-- buttons --}}
      <div class="d-flex">
        <a href="/restaurants/{{this.id}}">
          <button class="btn btn-primary">Show</button>
        </a>
        {{#if isFavorited}}
        <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger mx-1">移除最愛</button>
        </form>
        {{else}}
        <form action="/favorite/{{this.id}}" method="POST">
          <button type="submit" class="btn btn-primary mx-1">加到最愛</button>
        </form>
        {{/if}}
      </div>


    </div>
  </div>

</div>
{{/each}}